<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
    android:background="@drawable/backroundth"
android:gravity="center"
tools:context=".GameRule"

    >


<androidx.cardview.widget.CardView
    android:layout_width="350dp"
    android:layout_height="wrap_content"

    app:cardCornerRadius="30dp"
    app:cardElevation="30dp"
    android:elevation="30dp"
    android:layout_gravity="center"
    android:foregroundGravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/backroundth"
        android:gravity="center"
        android:layout_gravity="center"
        android:foregroundGravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/game1"
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    android:layout_margin="5dp"
                    android:elevation="10dp"
                    app:lottie_autoPlay="true"
                    app:lottie_rawRes="@raw/bird"
                    app:lottie_loop="true"/>
                <TextView
                    android:id="@+id/game2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Innocent Bird"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:fontFamily="@font/robot"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/game3"
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    android:layout_margin="5dp"
                    android:elevation="10dp"
                    app:lottie_autoPlay="true"
                    app:lottie_rawRes="@raw/coins"
                    app:lottie_loop="true"/>
                <TextView
                    android:id="@+id/game4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="COIN"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:fontFamily="@font/robot"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/game5"
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    android:layout_margin="5dp"
                    android:elevation="10dp"
                    app:lottie_autoPlay="true"
                    app:lottie_rawRes="@raw/bee1"
                    app:lottie_loop="true"/>
                <TextView
                    android:id="@+id/game6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yellow Bee"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:fontFamily="@font/robot"
                    />

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/game7"
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    android:layout_margin="5dp"
                    android:elevation="10dp"
                    app:lottie_autoPlay="true"
                    app:lottie_rawRes="@raw/enemyblue"
                    app:lottie_loop="true"/>
                <TextView
                    android:id="@+id/game8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Blue Bee"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:fontFamily="@font/robot"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/game9"
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    android:layout_margin="5dp"
                    android:elevation="10dp"
                    app:lottie_autoPlay="true"
                    app:lottie_rawRes="@raw/enemygreen"
                    app:lottie_loop="true"/>
                <TextView
                    android:id="@+id/game10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Green Bee"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:fontFamily="@font/robot"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/game11"
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    android:layout_margin="5dp"
                    android:elevation="10dp"
                    app:lottie_autoPlay="true"
                    app:lottie_rawRes="@raw/enemyyellow"
                    app:lottie_loop="true"/>
                <TextView
                    android:id="@+id/game12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Red bee"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:fontFamily="@font/robot"
                    />

            </LinearLayout>




        </LinearLayout>




        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/button"
            >
            <TextView
                android:id="@+id/game13"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Blue bird is innocent Bird .You Need to save it from These BEE'S and collect point.If you collect coin you will get 10 points.You have three life ,IF you touch any BEE you will lose One life. "
                android:background="#D50804"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_margin="2dp"
                android:fontFamily="@font/robot"

                />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>




</LinearLayout>
