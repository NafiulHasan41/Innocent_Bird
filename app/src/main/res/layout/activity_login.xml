<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backroundth"
    android:gravity="center"
    tools:context=".Login">
   <RelativeLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content">

       <com.airbnb.lottie.LottieAnimationView
           android:id="@+id/signLotti"
           android:layout_width="200dp"
           android:layout_height="100dp"
           android:layout_centerHorizontal="true"
           android:layout_marginBottom="10dp"
           android:elevation="10dp"
           app:lottie_autoPlay="true"
           app:lottie_rawRes="@raw/birdemail"
           app:lottie_loop="true"/>

   </RelativeLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:background="#05776B"
        android:backgroundTint="#05776B"
        android:layout_margin="10dp"
        app:cardCornerRadius="35dp"
        app:cardElevation="30dp"
        android:elevation="30dp"
        android:layout_gravity="center"
        android:foregroundGravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/backroundth"
            android:gravity="center"
            android:layout_gravity="top"
            android:foregroundGravity="center">




            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextColor="@color/black"
                android:textColorHint="@color/black"
                android:layout_margin="10dp"
                android:layout_marginTop="5dp"
                >

                <com.google.android.material.textfield.TextInputEditText

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:fontFamily="@font/robot"
                    android:id="@+id/signInEmail"
                    android:inputType="textEmailAddress"
                    android:drawableLeft="@drawable/baseline_email_24_white"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextColor="@color/black"
                android:textColorHint="@color/black"
                android:layout_margin="10dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/signInPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/password"
                    android:hint=" Password"
                    android:inputType="textPassword"
                    android:textColor="@color/black"
                    android:fontFamily="@font/robot"
                    android:textStyle="bold"/>
            </com.google.android.material.textfield.TextInputLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@drawable/button"
                >
            <Button
                android:id="@+id/signIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign In"
                android:fontFamily="@font/hogwartstyle"
                android:background="#549EA6"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_margin="2dp"

                />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textSignUp"
                android:text="Don't have an account?"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:fontFamily="@font/robot"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/button"
                >
                <TextView
                    android:id="@+id/toSignUP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SIGNUP"
                    android:background="#03433C"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:layout_margin="2dp"
                    android:fontFamily="@font/hogwartstyle"
                    />
            </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_margin="15dp"
                android:background="@drawable/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/forgotPassword"
                android:text="Forgot Your password?"
                android:fontFamily="@font/robot"
                android:textColor="@color/black"
                android:textSize="18sp"
               />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                >

                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:id="@+id/progressSignIn"
                    android:visibility="invisible"/>

            </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>



</LinearLayout>