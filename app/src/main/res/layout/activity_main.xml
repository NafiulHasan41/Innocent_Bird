<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/backroundth"
        android:orientation="vertical">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:id="@+id/toolbar"
            android:elevation="4dp"
          />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="5dp"
            >


            <androidx.cardview.widget.CardView
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="30dp"
                app:cardElevation="30dp"
                android:elevation="30dp"
                android:layout_gravity="center"
                android:foregroundGravity="center"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@drawable/backroundth"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:foregroundGravity="center">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginEnd="10dp"
                        android:layout_gravity="end"
                        android:src="@drawable/valume_on"
                        android:id="@+id/volume"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:foregroundGravity="center">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:id="@+id/highest_score_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:text="HIGHEST SCORE :"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/robot"
                            />
                        <TextView
                            android:id="@+id/highest_score"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="#F40707"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/hogwartstyle"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:id="@+id/highest_score_user_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:text="YOUR HIGHEST SCORE :"
                            android:textColor="@color/black"
                            android:textSize="19sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/hogwartstyle"
                            />
                        <TextView
                            android:id="@+id/highest_scoreUser"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="#F40707"
                            android:textSize="19sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/hogwartstyle"
                            />

                    </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">

                            <com.airbnb.lottie.LottieAnimationView
                                android:id="@+id/birdDemo"
                                android:layout_width="100dp"
                                android:layout_height="120dp"
                                android:layout_margin="5dp"
                                android:elevation="10dp"
                                app:lottie_autoPlay="true"
                                app:lottie_rawRes="@raw/bird"
                                app:lottie_loop="true"/>
                            <TextView
                                android:id="@+id/bird_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Innocent Bird"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:fontFamily="@font/robot"
                                />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="vertical">

                            <com.airbnb.lottie.LottieAnimationView
                                android:id="@+id/coin_demo"
                                android:layout_width="100dp"
                                android:layout_height="120dp"
                                android:layout_margin="5dp"
                                android:elevation="10dp"
                                app:lottie_autoPlay="true"
                                app:lottie_rawRes="@raw/coins"
                                app:lottie_loop="true"/>
                            <TextView
                                android:id="@+id/coin_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="COIN"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:fontFamily="@font/robot"
                                />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="vertical">

                            <com.airbnb.lottie.LottieAnimationView
                                android:id="@+id/enemy1_demo"
                                android:layout_width="100dp"
                                android:layout_height="120dp"
                                android:layout_margin="5dp"
                                android:elevation="10dp"
                                app:lottie_autoPlay="true"
                                app:lottie_rawRes="@raw/bee1"
                                app:lottie_loop="true"/>
                            <TextView
                                android:id="@+id/enemy1_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Yellow Bee"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:fontFamily="@font/robot"
                                />

                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">

                            <com.airbnb.lottie.LottieAnimationView
                                android:id="@+id/enemy2_demo"
                                android:layout_width="100dp"
                                android:layout_height="120dp"
                                android:layout_margin="5dp"
                                android:elevation="10dp"
                                app:lottie_autoPlay="true"
                                app:lottie_rawRes="@raw/enemyblue"
                                app:lottie_loop="true"/>
                            <TextView
                                android:id="@+id/enemy2_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Blue Bee"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:fontFamily="@font/robot"
                                />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="vertical">

                            <com.airbnb.lottie.LottieAnimationView
                                android:id="@+id/enemy3_demo"
                                android:layout_width="100dp"
                                android:layout_height="120dp"
                                android:layout_margin="5dp"
                                android:elevation="10dp"
                                app:lottie_autoPlay="true"
                                app:lottie_rawRes="@raw/enemygreen"
                                app:lottie_loop="true"/>
                            <TextView
                                android:id="@+id/enemy3_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Green Bee"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:fontFamily="@font/robot"
                                />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="vertical">

                            <com.airbnb.lottie.LottieAnimationView
                                android:id="@+id/enemy4_demo"
                                android:layout_width="100dp"
                                android:layout_height="120dp"
                                android:layout_margin="5dp"
                                android:elevation="10dp"
                                app:lottie_autoPlay="true"
                                app:lottie_rawRes="@raw/enemyyellow"
                                app:lottie_loop="true"/>
                            <TextView
                                android:id="@+id/enemy4_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Red bee"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:fontFamily="@font/robot"
                                />

                        </LinearLayout>




                    </LinearLayout>




                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:background="@drawable/button"
                        >
                        <Button
                            android:id="@+id/startGame"
                            android:layout_width="300dp"
                            android:layout_height="60dp"
                            android:text="START GAME"
                            android:background="#D80702"
                            android:textColor="@color/black"
                            android:textSize="30sp"
                            android:textStyle="bold"
                            android:layout_margin="2dp"
                            android:fontFamily="@font/hogwartstyle"

                            />
                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>




        </LinearLayout>


    </LinearLayout>
    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/nav_view"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/nav_drawer"
        app:itemIconTint="#CD0F0F"
        app:itemTextColor="#42BDFA"
        />





</androidx.drawerlayout.widget.DrawerLayout>